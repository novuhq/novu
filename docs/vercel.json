{
  "redirects": [
    { 
      "source": "/docs/:slug*",
      "destination": "/:slug*",
      "permanent": true
    }
  ],
  "rewrites": [
    { 
      "source": "/api",
      "destination": "https://novuapidocs.gatsbyjs.io/api"
    },
    { 
      "source": "/api/(.*)", 
      "destination": "https://novuapidocs.gatsbyjs.io/api/"
    }
  ]
}
