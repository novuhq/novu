    "lerna": "5.6.2",
    "lint-staged": "^10.5.4",
    "listr": "^0.14.3",
    "markdownlint-cli": "^0.33.0",
    "meow": "^10.1.3",
    "mississippi": "^4.0.0",
    "ora": "~5.4.1",
    "pkg-pr-new": "^0.0.24",
    "pnpm": "9.11.0",
    "prettier": "~3.3.3",
    "process": "^0.11.10",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.5",
