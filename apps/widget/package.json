{
  "name": "@novu/widget",
  "version": "0.24.1",
  "private": true,
  "scripts": {
    "start": "react-app-rewired start",
    "start:dev": "cross-env PORT=4500 pnpm start",
    "start:cli:local": "pnpm start:shell:test & pnpm start:shell:embed & cross-env PORT=3500 pnpm start",
    "start:test": "pnpm start:shell:test & pnpm start:shell:embed & cross-env NODE_ENV=test REACT_APP_API_URL=http://127.0.0.1:1336 REACT_APP_WS_URL=http://127.0.0.1:1340 PORT=3500 pnpm start",
    "envsetup": "chmod +x ./env.sh && ./env.sh && mv env-config.js ./public/env-config.js",
    "envsetup:docker": "chmod +x ./env.sh && ./env.sh && mv ./env-config.js ./build/env-config.js",
    "start:static:build": "pnpm envsetup:docker && http-server build -p 4500 --proxy http://127.0.0.1:4500?",
    "start:docker": "pnpm build && pnpm start:static:build",
    "docker:build": "docker buildx build -f ./Dockerfile --load -t novu-widget ./../.. $DOCKER_BUILD_ARGUMENTS",
    "docker:build:depot": "depot build -f ./Dockerfile -t novu-widget ./../.. --load",
    "prebuild": "rimraf build",
    "build": "cross-env NODE_OPTIONS=--max_old_space_size=4096 react-app-rewired --max_old_space_size=4096 build",
    "precommit": "lint-staged",
    "lint": "eslint src",
    "cypress:run": "cypress run",
    "cypress:open": "cypress open",
    "start:shell:test": "http-server . -p 4700",
    "start:shell:embed": "http-server ../../libs/embed/dist -p 4702",
    "start:api": "cd ../../ && pnpm run start:api:test"
  },
  "dependencies": {
    "@ant-design/icons": "^4.5.0",
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@mantine/core": "4.2.12",
    "@mantine/hooks": "4.2.12",
    "@novu/notification-center": "^0.24.1",
    "@novu/shared": "^0.24.1",
    "antd": "^4.10.0",
    "babel-plugin-import": "^1.13.3",
    "chroma-js": "^2.4.2",
    "eslint-plugin-cypress": "^2.15.1",
    "iframe-resizer": "^4.3.1",
    "jwt-decode": "^3.1.2",
    "polished": "^4.1.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-infinite-scroll-component": "^6.0.0",
    "react-infinite-scroller": "^1.2.4",
    "react-is": "^18.2.0",
    "react-refresh": "^0.14.0",
    "react-router-dom": "6.2.2",
    "rimraf": "^3.0.2",
    "socket.io-client": "4.7.2",
    "web-vitals": "^0.2.4",
    "webfontloader": "^1.6.28"
  },
  "devDependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.20.7",
    "@babel/plugin-transform-react-display-name": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.23.2",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@babel/runtime": "^7.20.13",
    "@emotion/babel-plugin": "^11.7.2",
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@faker-js/faker": "^6.0.0",
    "@novu/dal": "^0.24.1",
    "@novu/testing": "^0.24.1",
    "@types/jest": "^29.5.0",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "17.0.20",
    "@types/react-router-dom": "^5.1.7",
    "cross-env": "^7.0.3",
    "customize-cra": "^1.0.0",
    "cypress": "^13.3.1",
    "cypress-intellij-reporter": "^0.0.7",
    "cypress-network-idle": "^1.14.2",
    "html-webpack-plugin": "5.5.3",
    "http-server": "^0.13.0",
    "jest": "27.5.1",
    "less": "^4.1.0",
    "less-loader": "4.1.0",
    "react-app-rewired": "^2.2.1",
    "react-scripts": "^5.0.1",
    "typescript": "4.9.5",
    "webpack": "5.78.0",
    "webpack-dev-server": "4.11.1"
  },
